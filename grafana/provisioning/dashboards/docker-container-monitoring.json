{
  "id": null,
  "uid": "docker-container-monitoring",
  "title": "Docker Container Monitoring",
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "Container CPU Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name=~\".+\"}[1m]) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
    {
      "type": "graph",
      "title": "Container Memory Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\".+\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Container Filesystem Usage (MB)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "container_fs_usage_bytes{name=~\".+\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "C"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ]
}
